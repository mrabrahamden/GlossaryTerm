<Window x:Class="GlossaryTermApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:HamburgerMenu="clr-namespace:HamburgerMenu;assembly=HamburgerMenu"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlossaryTermApp"
        mc:Ignorable="d"
        Title="Teacherry" Height="450" Width="800" ResizeMode="NoResize">

    <Grid ShowGridLines="False" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="667*"/>
            <ColumnDefinition Width="127*"/>
        </Grid.ColumnDefinitions>
        <HamburgerMenu:HamburgerMenu x:Name="Menu" FontSize="16" Background="WhiteSmoke" MenuIconColor="#FFBD2525" SelectionIndicatorColor="#FFBD2525" MenuItemForeground="Black" HorizontalAlignment="Left" MaxWidth="200">
            <HamburgerMenu:HamburgerMenuItem Icon="image/home.png" Text="Словарь" Selected="HomeItem_Selected" />
            <HamburgerMenu:HamburgerMenuItem  Icon="image/edit.png" Text="Редактор"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/book.png" Text="Поиск" SelectionCommand="{Binding ElementName=this_}" Selected="DictionaryItem_Selected"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/match.png" Text="Сопоставление"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/fill in.png" Text="Дополнение"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/crossword.png" Text="Кроссворд" Selected="CrosswordItem_OnSelected"/>
        </HamburgerMenu:HamburgerMenu>

        <StackPanel x:Name="WorkPlace" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="410" Margin="72,10,-0.4,0" VerticalAlignment="Top" Width="722">
            <ScrollViewer x:Name="ScrollDictionary" HorizontalAlignment="Left" Height="350" Margin="5,40,0,0" VerticalAlignment="Top" Width="692" Grid.ColumnSpan="2">
                <StackPanel Name="StackPanelForWords" Orientation="Vertical"/>
            </ScrollViewer>
        </StackPanel>

    </Grid>
</Window>
