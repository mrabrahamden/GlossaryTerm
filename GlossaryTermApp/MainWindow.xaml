<Window x:Class="GlossaryTermApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:HamburgerMenu="clr-namespace:HamburgerMenu;assembly=HamburgerMenu"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlossaryTermApp"
        mc:Ignorable="d"
        Title="Teacherry" Height="450" Width="800">

    <Grid ShowGridLines="False" Background="White">
        <HamburgerMenu:HamburgerMenu x:Name="Menu" FontSize="16" Background="WhiteSmoke" MenuIconColor="#FFBD2525" SelectionIndicatorColor="#FFBD2525" MenuItemForeground="Black" HorizontalAlignment="Left" MaxWidth="200">
            <HamburgerMenu:HamburgerMenuItem Icon="image/home.png" Text="Словарь" SelectionCommand="{Binding ElementName=this_}" Selected="HamburgerMenuItem_Selected"/>
            <HamburgerMenu:HamburgerMenuItem  Icon="image/edit.png" Text="Редактор"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/search.png" Text="Поиск"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/match.png" Text="Сопоставление"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/fill in.png" Text="Дополнение"/>
            <HamburgerMenu:HamburgerMenuItem Icon="image/crossword.png" Text="Кроссворд" Selected="CrosswordItem_OnSelected"/>
        </HamburgerMenu:HamburgerMenu>
        <ScrollViewer x:Name="ScrollDictionary" HorizontalAlignment="Left" Height="350" Margin="72,43,0,0" VerticalAlignment="Top" Width="692">
            <StackPanel x:Name="StackPanelForWords" Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>
</Window>
