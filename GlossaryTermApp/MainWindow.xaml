    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="220">
      </ColumnDefinition>
      <ColumnDefinition/>
      <ColumnDefinition Width="0*"/>
    </Grid.ColumnDefinitions>
    <Button Content="Создать" BorderBrush="DarkGray" BorderThickness="2" Padding="-1" FontSize="20" HorizontalAlignment="Left" Margin="30,209,0,0" VerticalAlignment="Top" Width="160" Height="34" RenderTransformOrigin="0.511,-0.747"/>
    <Button Content="Кроссворд" BorderBrush="DarkGray" BorderThickness="2" Padding="-1" FontSize="20" HorizontalAlignment="Left" Margin="30,261,0,0" VerticalAlignment="Top" Width="160" Height="34"/>
