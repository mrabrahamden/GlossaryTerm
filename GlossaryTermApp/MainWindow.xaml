<Window x:Class="GlossaryTermApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:HamburgerMenu="clr-namespace:HamburgerMenu;assembly=HamburgerMenu"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlossaryTermApp"
        mc:Ignorable="d"
        Title="Teacherry" Height="450" Width="800">
 
    <Grid ShowGridLines="False" Background="White">
        <HamburgerMenu:HamburgerMenu x:Name="Menu" FontSize="16" Background="WhiteSmoke" MenuIconColor="#FFBD2525" SelectionIndicatorColor="#FFBD2525" MenuItemForeground="Black" HorizontalAlignment="Left">
          <HamburgerMenu:HamburgerMenuItem Icon="home.png" Text="Создать" SelectionCommand="{Binding ElementName=this_}"/>
          <HamburgerMenu:HamburgerMenuItem Icon="search.png" Text="Поиск"/>
          <HamburgerMenu:HamburgerMenuItem Icon="favorite.png" Text="Сопоставление"/>
          <HamburgerMenu:HamburgerMenuItem Icon="list.png" Text="Дополнение"/>
          <HamburgerMenu:HamburgerMenuItem Icon="person.png" Text="Кроссворд"/>
        </HamburgerMenu:HamburgerMenu>
  </Grid>
</Window>
