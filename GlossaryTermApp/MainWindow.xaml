    <RadioButton Content="Распечатать" HorizontalAlignment="Left" FontSize="20" Margin="30,147,0,0" VerticalAlignment="Top" Height="34" Width="160" RenderTransformOrigin="0.976,0.626"/>
  </Grid>
</Window>
