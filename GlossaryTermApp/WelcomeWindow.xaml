        <GroupBox Header="Выберите список предметов" Margin="39,105,0,69" HorizontalAlignment="Left" Width="343">
            <ScrollViewer Margin="0,0,0,2">
                <StackPanel x:Name="SubjStackPanel" Margin="3"/>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Header="Впишите свои предметы, если необходимо" Margin="0,105,49,69" HorizontalAlignment="Right" Width="329">
            <ScrollViewer>
                <StackPanel x:Name="NewSubjStackPanel" Margin="3"></StackPanel>
            </ScrollViewer>
        </GroupBox>
        <Button Content="Готово" FontSize="20" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="156" Height="44" Click="Button_Click"/>

    </Grid>
</Window>
