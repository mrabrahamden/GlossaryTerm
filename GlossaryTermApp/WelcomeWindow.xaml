<Window x:Class="GlossaryTermApp.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlossaryTermApp"
        mc:Ignorable="d"
        Title="Добро пожаловать в Teacherry" MinHeight="450" MinWidth="800">
    <Grid>
        <Image Source="Screenshot_1.png" Margin="333,0,0,0" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Width="76"/>
