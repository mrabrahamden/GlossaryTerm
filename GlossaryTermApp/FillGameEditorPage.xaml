<Window x:Class="GlossaryTermApp.FillGameEditorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlossaryTermApp"
        mc:Ignorable="d"
        Title="FillGameEditorPage" Height="450" Width="800">
    <Grid>
        <ScrollViewer x:Name="ScrollEditor" Visibility="Visible"  HorizontalAlignment="Left"   VerticalAlignment="Top" Height="369" Width="772" Margin="10,10,0,0" >
            <StackPanel x:Name="StackPanelForWords" Orientation="Vertical"/>
        </ScrollViewer>
        <Button x:Name="BtnOk" Content="Ok" HorizontalAlignment="Left" Height="26" Width="40" FontSize="20" Margin="720,384,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
